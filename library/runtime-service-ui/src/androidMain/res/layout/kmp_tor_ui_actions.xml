<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kmp_tor_ui_container_actions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:background="@android:color/holo_blue_light"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/kmp_tor_ui_actions_load_instance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="@dimen/kmp_tor_ui_action_container_margin_start"
        android:layout_marginBottom="-15dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:divider="?android:attr/listDivider"
        android:dividerPadding="@dimen/kmp_tor_ui_action_list_divider_padding"
        tools:background="@android:color/holo_green_dark"
        tools:layout_width="96dp"
        tools:layout_height="32dp">

        <!-- Instance Actions added here -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kmp_tor_ui_container_actions_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/kmp_tor_ui_actions_load_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/kmp_tor_ui_action_container_margin_end"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:divider="?android:attr/listDivider"
            android:dividerPadding="@dimen/kmp_tor_ui_action_list_divider_padding"
            tools:background="@android:color/holo_green_dark"
            tools:layout_width="64dp"
            tools:layout_height="32dp">

            <!-- Selector Actions added here -->
        </LinearLayout>

        <TextView
            android:id="@+id/kmp_tor_ui_actions_selector_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textStyle="bold"
            style="@style/TextAppearance.KmpTorUI.Text"
            tools:text="[0A17â€¦755C]" />

    </LinearLayout>

</FrameLayout>
