<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kmp_tor_ui_action"
    android:layout_width="@dimen/kmp_tor_ui_action_size"
    android:layout_height="@dimen/kmp_tor_ui_action_size"
    android:gravity="center"
    android:background="@null"
    android:enabled="false"
    android:alpha="0.50"
    tools:background="@android:color/holo_blue_dark">

    <ImageView
        android:id="@+id/kmp_tor_ui_action_image"
        android:layout_width="@dimen/kmp_tor_ui_action_image_size"
        android:layout_height="@dimen/kmp_tor_ui_action_image_size"
        android:padding="@dimen/kmp_tor_ui_action_image_padding"
        android:scaleType="centerInside"
        android:enabled="false"
        tools:src="@drawable/ic_kmp_tor_ui_action_newnym"
        tools:ignore="ContentDescription" />

</LinearLayout>
