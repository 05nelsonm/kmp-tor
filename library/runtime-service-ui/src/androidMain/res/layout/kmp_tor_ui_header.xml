<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:orientation="horizontal"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/kmp_tor_ui_header_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        tools:src="@android:drawable/stat_notify_chat"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/kmp_tor_ui_header_app_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:singleLine="true"
        style="@style/TextAppearance.KmpTorUI.Info"
        tools:text="KmpTor UI" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="â€¢"
        android:paddingHorizontal="8dp"
        style="@style/TextAppearance.KmpTorUI.Info"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/kmp_tor_ui_header_duration"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:singleLine="true"
        style="@style/TextAppearance.KmpTorUI.Time"
        tools:text="15m" />

</LinearLayout>
