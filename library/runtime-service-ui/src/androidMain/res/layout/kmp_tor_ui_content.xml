<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/kmp_tor_ui_container_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/kmp_tor_ui_content_title_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_gravity="start|center_vertical"
            style="@style/TextAppearance.KmpTorUI.Title"
            tools:text="Tor: On" />

        <TextView
            android:id="@+id/kmp_tor_ui_content_title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="bottom"
            android:singleLine="true"
            style="@style/TextAppearance.KmpTorUI.Line2"
            tools:text="Bootstrapped 50%" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/kmp_tor_ui_container_content_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/kmp_tor_ui_content_info_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:visibility="gone"
            style="?android:attr/progressBarStyleHorizontal"
            tools:visibility="visible"
            tools:max="100"
            tools:progress="50" />

        <TextView
            android:id="@+id/kmp_tor_ui_content_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:singleLine="true"
            android:visibility="gone"
            style="@style/TextAppearance.KmpTorUI.Line2"
            tools:text="0KBps ↓ / 0KBps ↑"
            tools:visibility="visible" />

    </FrameLayout>

</LinearLayout>
