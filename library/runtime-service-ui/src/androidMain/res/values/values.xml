<resources>
    <!-- Action Icon size and positioning can be adjusted by overriding, if necessary -->
    <dimen name="kmp_tor_ui_action_width">48dp</dimen>
    <dimen name="kmp_tor_ui_action_height">48dp</dimen>
    <dimen name="kmp_tor_ui_action_icon_width">40dp</dimen>
    <dimen name="kmp_tor_ui_action_icon_height">40dp</dimen>
    <dimen name="kmp_tor_ui_action_icon_padding">12dp</dimen>
